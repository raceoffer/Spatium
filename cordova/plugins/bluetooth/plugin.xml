<?xml version='1.0' encoding='utf-8'?>
<plugin id="bluetooth" 
	version="1.0.0" 
	xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>bluetooth</name>

    <js-module name="bluetooth" src="www/bluetooth.js">
        <clobbers target="cordova.plugins.bluetooth" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Bluetooth" >
                <param name="android-package" value="capital.spatium.wallet.bluetooth"/>
            </feature>
        </config-file>

        <source-file src="src/android/Bluetooth.java" target-dir="src/capital/spatium/wallet/bluetooth" />
    </platform>
</plugin>
